</head>

<body>
<div class="list-group">
    <button type="button" class="list-group-item list-group-item-action active">
    <center>CURRENT PATIENTS</center>
    </button>
    {{#patient}}
        <button type="button" class="list-group-item list-group-item-action">
            {{lastname}},&nbsp;&nbsp;{{firstname}}&nbsp;&nbsp;{{roomnumber}}
        </button>

        <a href="/{{hospitalname}}/{{hospitalid}}/{{username}}/{{employeeid}}/{{patientid}}/edit-info"><button type="button" class="edit-patient">
                VIEW&nbsp;/&nbsp;EDIT</button></a>
        <button type="button" class="delete-patient">DELETE</button>

    {{/patient}}
</div>
    <script src="allpatients.js"></script>
</body>
</html>
